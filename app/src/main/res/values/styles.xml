<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="left_menu_style">
        <item name="android:layout_marginTop">@dimen/menu_margin_top</item>
        <item name="android:drawablePadding">@dimen/drawable_padding</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_largerX</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
