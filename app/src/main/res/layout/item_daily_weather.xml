<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginLeft="@dimen/common_margin_left"
                android:layout_marginTop="@dimen/common_margin_top"
                android:id="@+id/tv_daily_day"
                android:text="@string/city_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_below="@id/tv_daily_day"
                android:layout_marginLeft="@dimen/common_margin_left"
                android:layout_marginTop="@dimen/common_margin_top"
                android:id="@+id/tv_daily_night"
                android:text="@string/city_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_below="@id/tv_daily_night"
                android:layout_marginLeft="@dimen/common_margin_left"
                android:layout_marginTop="@dimen/common_margin_top"
                android:id="@+id/tv_daily_high"
                android:text="@string/city_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_below="@id/tv_daily_high"
                android:layout_marginLeft="@dimen/common_margin_left"
                android:layout_marginTop="@dimen/common_margin_top"
                android:id="@+id/tv_daily_low"
                android:text="@string/city_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_below="@id/tv_daily_low"
                android:layout_marginLeft="@dimen/common_margin_left"
                android:layout_marginTop="@dimen/common_margin_top"
                android:id="@+id/tv_daily_wind_dir"
                android:text="@string/city_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_below="@id/tv_daily_wind_dir"
                android:layout_marginLeft="@dimen/common_margin_left"
                android:layout_marginTop="@dimen/common_margin_top"
                android:id="@+id/tv_daily_wind_scale"
                android:text="@string/city_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginRight="@dimen/common_margin_right"
                android:layout_marginTop="@dimen/common_margin_top"
                android:layout_alignParentRight="true"
                android:id="@+id/tv_daily_date"
                android:text="@string/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <ImageView
                android:id="@+id/iv_daily_photo"
                android:layout_marginRight="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/w0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>